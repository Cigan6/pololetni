<body>
    <nav class="navbar bg-secondary bg-gradient" >
        <div class="container-fluid">
            <a class = "text1 fw-bold fs-4 ms-4 nav-link bg-dark bg-gradient text-white p-2 rounded-3" href="/uvod">CANGABANG.CZ</a>
            <div  class="">
                <ul class="nav nav-pills">            
                    <li class = "nav-item ms-auto">
                        <a href = "/1" class = "text1 fw-bold fs-5 ms-4 nav-link bg-dark bg-gradient text-white">Obrázky produktů</a>
                    </li>
                    <li class = "nav-item">
                        <a href = "/2" class = "text1 fw-bold fs-5 ms-4 nav-link bg-dark bg-gradient text-white">seznam produktů</a>
                    </li>
                    <li class = "nav-item">
                        <a href = "/stiznosti" class = "text1 fw-bold fs-5 ms-4 nav-link bg-dark bg-gradient text-white">napsat stížnost</a>
