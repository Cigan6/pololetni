    <style>
.text1 {
    transition: transform 0.3s ease;
}

.text1:hover {
    transform: scale(1.1);
}
</style>

    {% block obsah %}
    <div class = "position-absolute top-50 start-50 translate-middle text-center fs-5">   
    <div class= "text-center fs-1 fw-bold">Vítejte</div> 
        <p></p>
        <a id="hodina"></a>
        :
        <a id="minuta"></a>
        :
        <a id="sekunda"></a>
       
        
        <script>
        setInterval(function(){
            const s = new Date();
            document.getElementById("sekunda").innerHTML = s.getSeconds();
            const m = new Date();
            document.getElementById("minuta").innerHTML = m.getMinutes();
            const h = new Date();
            document.getElementById("hodina").innerHTML = h.getHours();
        }, 1000);
        </script>
    </div>
    

    {% endblock %}
    
</body>
